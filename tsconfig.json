{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2024"],
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "types": ["vitest/globals"]
  },
  "include": ["src"]
}
